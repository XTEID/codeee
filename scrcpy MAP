@echo off
title Scrcpy Launcher

:menu
echo Pilih metode koneksi:
echo 1. Menggunakan USB
echo 2. Menggunakan IP Address dan Port
echo 3. Keluar

set /p choice=Masukkan pilihan Anda (1-3):

if "%choice%"=="1" goto usb
if "%choice%"=="2" goto ip_port
if "%choice%"=="3" goto exit

echo Pilihan tidak valid. Silakan coba lagi.
pause
goto menu

:usb
echo Menjalankan scrcpy melalui USB...
scrcpy.exe
goto exit

:ip_port
echo Anda memilih koneksi melalui IP Address dan Port.
set /p ip_address=Masukkan IP Address perangkat Android Anda:
set /p port=Masukkan Port (default: 5555):
if "%port%"=="" set port=5555
echo Menjalankan scrcpy dengan IP: %ip_address% dan Port: %port%...
scrcpy.exe --tcpip=%ip_address%:%port%
goto exit

:exit
echo Terima kasih!
pause
exit
